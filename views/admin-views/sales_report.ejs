<%- include('header') %>

<!-- sales-report.ejs -->
<div class="container">
  <div class="col-lg-4">
    <div class="row mt-3">
      <div class="">
        <!-- product.ejs -->
        <form id="filterForm" action="/filter_salesreport" method="post" onsubmit="filterSalesReport(event)">
          <label for="minPrice">Start: </label>
          <input
            type="date"
            name="startdate"
            style="width: 110px"
            id="minPrice",
            placeholder="Start"
            id="selectedDates"
          />
          <label for="maxPrice">to</label>
          <input
            type="date"
            name="enddate"
            style="width: 110px"
            id="maxPrice",
            placeholder="End"
          />
          <button type="submit" class="ml-2 btn-info" style="width: 80px">
            Filter
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div  class="table-container bg-light">
   
  <table class="bg-light" id="adminTable">
 
    <thead>
      <tr class="text-white">
        <th>Date</th>
        <th>order Id</th>
        <th>User Name</th>
        <th>Item</th>
        <th>Price</th>
        <th>Payment Method</th>
      </tr>
    </thead>
    <tbody id="sample">
      <% salesData.forEach((sale) => { %>
        <% sale.items.forEach((item) => { %>
          <tr>
            <td><%= sale.createdAt.toLocaleDateString() %></td>
            <td><%= sale._id %></td>
            <td><%= sale.user.name %></td>
            <td><%= item.quantity %></td>
            <td><%= sale.total %></td>
            <td><%= sale.payment_method %></td>
          </tr>
        <% }) %>
      <% }) %>
    </tbody>
  </table>
  </div>
</div>

  <%- include('footer') %>
  
  


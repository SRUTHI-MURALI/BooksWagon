<%- include('header') %>

<!-- Table Start -->
<div class=container>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
    
        
        <div class="card-body">
           <div class="table-responsive">
            <table class="table " style="width:100%">
             <thead>
              <tr >
                <th scope="col">#</th>
               
                <th scope="col">product Name</th>
               

                <th scope="col">Quantity</th>
              
                <th scope="col">Price</th>
                <th scope="col">Total</th>
                <th scope="col">payment </th>
                
                <th scope="col">Photo</th>
                <th scope="col" >Address</th>
               
              </tr>
            </thead>

            <tbody >
              
                <% orders.items.forEach((item,index) => { %>
                    <tr style="white-space:pre-line">
                      <td><%= index + 1 %></td>
                      
                      <td><%= item.product.name %></td>
                      <td><%= item.quantity %></td>
                      <td><%= item.price %></td>
                      <td><%= item.price *item.quantity  %></td>
                      <td ><%= orders.payment_method %></td>
                      <td><img src="/<%= item.product.photo[0] %>" style="width:100px" alt="img" /> </td>
                      <td>
                        <%= orders.address.add1 %>
                        <%= orders.address.add2 %>
                        <%= orders.address.city %>
                        <%= orders.address.phone %>
                        <%= orders.address.pin_number %>
                    </td>
                      
                      
                     
                      
                    </tr>
                  <% }); %>
                  
                
            </tbody>
            
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Table End -->



<%- include('footer') %>

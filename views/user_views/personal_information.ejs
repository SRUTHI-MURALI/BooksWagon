<%- include('header') %>

<!-- breadcrumb part start-->
<section class="breadcrumb_part">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb_iner">
          <h2>Personal Details</h2>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- breadcrumb part end-->


<!--================Checkout Area =================-->
<section class="checkout_area section_padding">
  <div class="container">
    <div class="billing_details">
      <div class="row">
        <!-- <div class="form-group mt-3">
              <label for="photo">Photo file:</label>
              <input type="file" class="form-control-file" name="photo" />
            </div> -->
          
        <div class="col-lg-8">
          <form
          action="/update_userProfile/<%= user._id %>"
          id="update_category"
          name="basic"
          method="post"
          enctype="multipart/form-data"
          
        >
        <div class="mb-3">
          <label for="photo" class="form-group ml-5">Photo file:</label>
          <% if(user.photo[0]) { %>
              <input
                  type="file"
                  name="photo"
                  value="<%= user.photo[0] %>"
                  class="form-control-file"
              />
          <% } else { %>
              <input
                  type="file"
                  name="photo"
                  accept="image/*"
                  class="form-control-file"
              />
              <img src="/assets/img/dummy-profile-pic.png" alt="Dummy Profile Pic" />
          <% } %>
      </div>
          <div class="mb-3">
            <label for="category" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
             
              name="username"
              value="<%= user.name %>"
            />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Phone</label>
            <input
              type="text"
              class="form-control"
             
              name="phone"
              value="<%= user.phone %>"
            />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Email</label>
            <input
              type="text"
              class="form-control"
             
              name="email"
              value="<%= user.email %>"
            />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Gender</label>
            <input
              type="text"
              class="form-control"
             
              name="gender"
              value="<%= user.gender %>"
            />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Account Number</label>
            <input
              type="text"
              class="form-control"
             
              name="acc"
              value="<%= user.account_no %>"
            />
          </div>
          <button type="submit" class="btn btn-primary">Update Profile</button>
        </form>
        </div>
      </div>
    </div>
  </div>
</section>


<%- include('footer') %>
<%- include('header') %>
<section class="login_part">
    <div class="container">
      <div class="row align-items-center justify-content-center">
        <div class="col-lg-6 col-md-6">
            <% if(locals.successMessage) { %>
                <div id="successMessage" class="alert alert-success" align="center"><%- locals.successMessage -%></div>
            <%}%>
          <div class="login_part_form">
            <div class="login_part_form_iner">
              <h3 class="text-center">sign up with OTP</h3>
              <form class="row contact_form" id="verifyOTPForm" action="/verifyOTP_signUp" method="post" novalidate="novalidate">
                <div class="col-md-12 form-group p_star">
                  <input type="tel" class="form-control" id="otp" name="otp" value="" placeholder="Enter OTP" />
                </div>
                <div class="col-md-12 form-group">
                  <button type="submit" class="btn_3">verify</button>
                </div>
              </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
    setTimeout(() => {

        document.getElementById('successMessage').style.display="none"
        
    }, 3000);
</script>

  <%- include('footer') %>
<!--================Checkout Area =================-->
<section class="checkout_area section_padding">
  <div class="container">
    <div class="billing_dails">
    <div class="row">
        <div class="col-lg-8">
          <div class="order_box">
            <div class="row">
            <div class="col-lg-6">
            <h5>Details</h5>
            <hr>
            <% if(user){ %>
            <form class="contact_form">
                
                  <div class="col-md-12 mt-5 form-group">
                   
                    <p>Name: <%= user.name %></p>
               
                    
                    <p>Phone: <%= user.phone %></p>
                    <p>Email: <%= user.email %></p>
                    <p>Gender: <%= user.gender %></p>
                    <p>Account Details: <%= user.account_no %></p>
                    <p>Wallet Amount: <%= user.walletAmount %></p>
                   
                    <a href="/forget-password">Change Password</p></a>
                    
                  </div>
                </form>
                  <a href="/user_profile_update/<%= user._id %>">
                   
                    <button class="btn btn-primary mt-2 mr-5 ml-3" type="submit">Update</button>
                    </a>
           
              <% } %>
        </div>
        <div class="col-lg-2">
            <div class="single_product_img">
              <a href="/user_profile_update">
              <%  if(user.photo[0]){ %>
                <img style="width: 300px; margin-top: 10px;"
                  id="main_product_image"
                  src="/<%= user.photo[0] %>"
                  alt="#b"
                  class="img-fluid"
                />
                <% } %>
                <% if(!user.photo[0]) { %>
                 
                      <img style="width: 300px; margin-top: 10px;"
                  id="main_product_image"
                  src="/assets/img/dummy-profile-pic.png"
                  alt="#nh"
                  class="img-fluid"
                />
                   <p>Upload Image</p>
                    <% } %>
                  </a>
              </div>
        </div>
    </div>
          </div>
         
        </div>
        <div class="col-lg-2">
            <div class="order_box">
                <ul class="list list_2">
                   <li>
                        <a href="/user_order">
                        <button class="btn btn-primary mt-3 btn-sm btn-block " type="submit">orders</button>
                        </a>
                    </li>
                        <li>
                        <a href="/wishlist">
                        <button class="btn btn-primary mt-3 btn-sm btn-block" type="submit">wishlist</button>
                        </a>
                    
                    </li>
                        <li>
                        <a href="/address_page">
                        <button class="btn btn-primary mt-3 btn-sm btn-block" type="submit">Address</button>
                        </a>
                    </li>
                        <li>
                        <a href="/cart">
                            <button class="btn btn-primary mt-3 btn-sm btn-block" type="submit"> cart </button>
                        </a>
                    </li>
                    <li>
                      <a href="/Wallet_history">
                          <button class="btn btn-primary mt-3 btn-sm btn-block" type="submit"> wallet </button>
                      </a>
                  </li>
                    
                    
                </ul>
                
            </div>
            
        </div>
        
    </div>
    </div>
  </div>
</section>
